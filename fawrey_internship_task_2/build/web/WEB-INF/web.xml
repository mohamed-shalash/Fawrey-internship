<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <context-param>
        <param-name>shared</param-name>
        <param-value>this data is shared</param-value>
    </context-param>
    <servlet>
        <servlet-name>Product</servlet-name>
        <servlet-class>Servelet.MyServelet</servlet-class>
        <init-param>
            <param-name>secret</param-name>
            <param-value>mas</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Add</servlet-name>
        <servlet-class>Servelet.Add</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetAll</servlet-name>
        <servlet-class>Servelet.GetAll</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Update</servlet-name>
        <servlet-class>Servelet.Update</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Delete</servlet-name>
        <servlet-class>Servelet.Delete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Getjsp</servlet-name>
        <servlet-class>Getjsp</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Product</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetAll</servlet-name>
        <url-pattern>/getall</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Update</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Getjsp</servlet-name>
        <url-pattern>/show</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
